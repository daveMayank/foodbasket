    <div class="col-md-6">
        <h3>Kindly preview your order</h3><br>
        {{=tab}}
        <br><p>
        Total bill : {{=totalBill}} Rupees.
        </p>
        <div align="right">
            
        <a href="{{=URL('default','cancel_order')}}"><button type="button" class="btn btn-danger">Cancel</button></a><a href="{{=URL('default','confirm_order')}}"><button type="button" class="btn btn-default" >Confirm Order</button></a>
        </div>

        
    </div>
    <div class="col-md-3"></div>

</div>
{{else:}}
